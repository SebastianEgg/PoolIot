@*@CodeCopy*@
@{
    @using SnQPoolIot.AspMvc.Modules.Session
    @using SnQPoolIot.AspMvc.Modules.Language

    var sessionWrapper = new SessionWrapper(Context.Session);
    Func<string, string> translate = Translator.TranslateIt;
    Func<string, string> translateFor = pn => translate($"PortalMenu.{pn}");

    <ul class="navbar-nav flex-grow-1">
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">@translateFor("Home")</a>
        </li>
@*#if ACCOUNT_ON*@
        @if (sessionWrapper.LoginSession != null)
        {
            <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="SensorDatas" asp-action="Index">@translateFor("Show PoolData")</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Sensors" asp-action="Index">@translateFor("Show Sensors")</a>
        </li>
        }
        @*#endif*@
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Contact">@translateFor("Contact")</a>
        </li>
    </ul>
}
